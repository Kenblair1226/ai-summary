# LLM Providers Configuration
# -----------------------------

# LiteLLM Configuration
LITELLM_API_KEY=your_litellm_api_key_here
LITELLM_API_BASE=https://litellm.neorex.xyz
LITELLM_MODEL=your_litellm_model_here
LITELLM_TEMPERATURE=1.0
LITELLM_TOP_P=0.95
LITELLM_MAX_TOKENS=8192

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-pro-exp-03-25
GEMINI_TEMPERATURE=1.0
GEMINI_TOP_P=0.95
GEMINI_TOP_K=40
GEMINI_MAX_TOKENS=8192

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3-opus
OPENROUTER_TEMPERATURE=1.0
OPENROUTER_TOP_P=0.95
OPENROUTER_MAX_TOKENS=8192

# Default LLM Provider (litellm, gemini, or openrouter)
DEFAULT_LLM_PROVIDER=litellm

# System Prompt (Optional - will be used by all providers)
# SYSTEM_PROMPT=your_system_prompt_here

# Other Application Settings
# --------------------------
wp_host=https://your-wordpress-site.com
wp_user=your_wordpress_username
wp_pass=your_wordpress_password

ghost_url=https://your-ghost-site.com
ghost_key=your_ghost_key

DB_PATH=database.db
